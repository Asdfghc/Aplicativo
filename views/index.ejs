<script>
    function tempoDesde(data) {
        const segundos = Math.floor((new Date() - data) / 1000);

        const intervalos = [
            { label: "ano", seg: 31536000 },
            { label: "mês", seg: 2592000 },
            { label: "dia", seg: 86400 },
            { label: "h", seg: 3600 },
            { label: "min", seg: 60 },
        ];

        for (const i of intervalos) {
            const valor = Math.floor(segundos / i.seg);
            if (valor > 0) {
                return `há ${valor} ${i.label}`;
            }
        }
        return "Recente";
    }

    const tempos = document.querySelectorAll(".tempoPost");

    tempos.forEach((timeEl) => {
        // Inserir TimeStamp dos posts aqui Backend
        const dataPost = new Date("2025-04-26T10:32:00");

        timeEl.textContent = tempoDesde(dataPost);
        timeEl.setAttribute("datetime", dataPost.toISOString());
    });
</script>
