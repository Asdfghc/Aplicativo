<form action="/users/login" method="post" class="w-120 p-6 rounded-2xl bg-slate-300 dark:bg-slate-800 shadow-md">
    <h1 class="text-center w-full mb-4 text-3xl font-bold text-gray-500">Login</h1>
    <br>
    <input type="email" name="email" placeholder="Email" class="w-full p-2 rounded-lg mb-2 bg-slate-400 dark:bg-slate-900" required />
    <br>
    <input type="password" name="password" placeholder="Senha" class="w-full p-2 rounded-lg mb-4 bg-slate-400 dark:bg-slate-900" required />
    <br>
    <input type="hidden" id="g-recaptcha-token" name="g-recaptcha-token" />
    <br>
    <button type="submit" class="block mx-auto rounded-2xl h-8 w-18 bg-green-500 hover:bg-zinc-700">Entrar</button>
    <br>
    <a href="/users/new" class="text-center block text-gray-500 hover:text-gray-700 dark:text-gray-300 dark:hover:text-gray-100">NÃ£o tem uma conta?</a>
</form>
